page {
  color: black;
  background-color: white;
}
.screen {
  display: absolute;
  padding: 36rpx;
}
.product {
  display: flex;
  padding: 16rpx;
  background-color: white;
  box-sizing: border-box;
}
.shopping {
  padding-left: 320rpx;
  zoom: 3rpx;
}
.list {
  padding-top: 8rpx;
  padding-left: 150rpx;
}
.screen1 .product {
  margin: 19rpx;
  height: auto;
  width: auto;
  box-shadow: 0 2rpx 5rpx 0 rgba(0, 0, 0, 0.2);
}
.products {
  padding: 30rpx;
  font-style: oblique;
}
.paragraph {
  -webkit-transition: transform ease-in-out 300ms;
  transition: transform ease-in-out 300ms;
  -webkit-transform: scale(0.6);
  transform: scale(0.6);
}
