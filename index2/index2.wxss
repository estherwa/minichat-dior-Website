/* app css stylesheet */

page {
  color: #333;
  background-color: #ddd;
  overflow: hidden;
}
.shopping{
  display: flex;
  left: 320rpx;
  zoom: 3rpx;

}
button {
  border: 0 solid #0010ae;
  background-color: #1f2afe;
  color: #fff;
  font-size: 120%;
  padding: 8rpx 16rpx;
  outline-width: 0;
  -webkit-appearance: none;
  box-shadow: 0 8rpx 17rpx rgba(0, 0, 0, 0.2);
}

.screen {
  display: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  -webkit-overflow-scrolling: touch;
}

.contact {
  display: absolute;
  padding: 16rpx;
  background-color: #fff;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}


.name {
  height: 100rpx;
  font-size: 2em;
  font-weight: bold;
  text-align: center;
  margin: 10rpx 0;
}

.list {
  padding-top: 8rpx;
  padding-left: 150rpx;
}
.gold-text {
  color: goldenrod

}
.screen1 {
  overflow-y: scroll;
  padding: 0;
}

.screen1 .contact {
  margin: 16rpx;
  height: auto;
  width: auto;
  box-shadow: 0 2rpx 5rpx 0 rgba(0, 0, 0, 0.2);
}
.details1{
  display: flex;
  padding-top: 100rpx;
  padding-left: 150rpx;
 scale: 30rpx;

}
.screen2-button {
  display: block;
  margin: 24rpx auto;
}

.paragraph {
  -webkit-transition: transform ease-in-out 300ms;
  transition: transform ease-in-out 300ms;
  -webkit-transform: scale(0.6);
  transform: scale(0.6);
}

.enter.paragraph {
  transform: none;
}