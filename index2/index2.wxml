<view
	show="{{show}}"
	overlay="{{overlay}}"
	close-on-slide-down
  duration="{{duration}}"
  position="{{position}}"
  bindbeforeenter="onBeforeEnter"
  bindenter="onEnter"
  bindafterenter="onAfterEnter"
  bindbeforeleave="onBeforeLeave"
  bindleave="onLeave"
  bindafterleave="onAfterLeave"
  bindclickoverlay="onClickOverlay"
> 
	<view class="screen screen2"> 
		<view class="contact">
			<share-element class="avatar" duration="{{duration}}" key="avatar" transform>
				<image style="width: 150rpx;" mode="heightFix" src="../images/{{contact.img}}" />
			</share-element>
			<share-element class="name" key="name" duration="{{duration}}" transform />
			<view class="paragraph {{show ? 'enter' : ''}}">
        <detail-component class="details1">Details: {{contact.details}}</detail-component>
			</view>

      <button-component>
			<button class="screen2-button" bindtap="showPrev"  hover-class="none">Go back </button>
    </button-component>
		</view>
	</view>
</view>
